{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["es6"],
    "module": "ESNext",
    "rootDir": "src",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  },
  "include": ["./**/*.ts"],
  "exclude": ["src/**/*.test.ts"]
}
